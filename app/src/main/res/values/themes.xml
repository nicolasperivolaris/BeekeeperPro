<resources>
    <!-- Base application theme. -->
    <style name="Theme.BeekeeperPro" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowBackground">@color/primaryLightColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BeekeeperPro.Toolbar" parent="Theme.BeekeeperPro">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="Theme.BeekeeperPro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BeekeeperPro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BeekeeperPro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>