<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/apiaryImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/picture"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@id/apiaryName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:contentDescription="@string/apiaryName"
                    android:hint="Name"
                    android:paddingStart="5dp"
                    android:textSize="40dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/apiaryLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/apiary_location"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lblHiveCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/hives_count"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/hiveCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="0"
                    android:padding="5dp"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>