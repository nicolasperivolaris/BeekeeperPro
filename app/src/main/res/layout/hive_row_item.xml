<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hive_name"
        android:textColorHint="#78909C"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hive_code"
        android:textColorHint="#757575"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_view_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hiveStrength"
        android:textColorHint="#757575"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_view_creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hive_creation_date"
        android:textColorHint="#757575"
        android:textSize="14sp" />

    <Button
        android:id="@+id/inspection_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_inspection" />

    <ImageButton
        android:id="@+id/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/action_delete"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@android:drawable/ic_delete" />


</LinearLayout>
